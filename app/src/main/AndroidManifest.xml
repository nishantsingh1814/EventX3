        <!-- <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/> -->
        <!-- </intent-filter> -->
        <!-- </service> -->
        <activity android:name=".NotificationActiviity" />
        <activity android:name=".ChatActivity"></activity>
    </application>

</manifest>